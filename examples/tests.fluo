-- Example of syntax oriented programming

--using syntax::statement;
impl useless_print -> syntax::statement::statement {
    pattern syntax::statement::parse {
        "print",
        $expr: syntax::expr,
        ";"
    }

    pattern syntax::statement::run {
        print($expr);
    }
}

